{
  "name": "TwitchBot",
  "version": "0.0.1",
  "description": "Crossplatform Twitch bot application ",
  "main": "main.js",
  "scripts": {
    "start": "electron bin/dev --inspect=5858",
    "format": "prettier --list-different --single-quote --print-width=120 \"src/**/*.{js,jsx}\"",
    "prebuild": "./node_modules/.bin/webpack --env.prod true && babel src/main -d ./dist ",
    "prodPrebuild": "set NODE_ENV=production && yarn prebuild",
    "create-linux": "yarn prodPrebuild && electron-packager ./ TwitchBot --platform linux --out release-builds --overwrite --ignore src --ignore bin",
    "create-win": "yarn prodPrebuild && electron-packager ./ TwitchBot --platform win32 --out packed --overwrite --ignore src --ignore bin --asar"
  },
  "build": {
    "appId": "com.electron.twitchBot",
    "productName": "Twitch-Bot-beta",
    "copyright": "Copyright Â© 2018 year Mykyta Meshcheriakov",
    "directories": {
      "buildResources": "/",
      "output": "release-builds"
    },
    "linux": {
      "target": "deb"
    }
  },
  "productName": "Twitch-Bot-beta",
  "author": {
    "email":"mmeshcheriakov@gmail.com",
    "name": "Mykyta Meshcheriakov",
    "url" : "https://www.linkedin.com/in/mykyta-meshcheriakov-603233a2/"
  },
  "license": "MIT",
  "dependencies": {
    "google-tts-api": "0.0.2",
    "jsonfile": "^4.0.0",
    "lodash": "^4.17.4",
    "material-ui": "^1.0.0-beta.27",
    "material-ui-icons": "^1.0.0-beta.17",
    "moment": "^2.19.2",
    "node-fetch": "^1.7.3",
    "prop-types": "^15.6.0",
    "react": "^16.1.0",
    "react-audioplayer": "^0.3.1",
    "react-dom": "^16.1.0",
    "react-number-format": "^3.1.3",
    "react-sound": "^0.8.0",
    "tmi.js": "^1.2.1",
    "typeface-roboto": "0.0.45"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-electron": "^1.4.15",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "clean-webpack-plugin": "^0.1.17",
    "electron": "^1.7.9",
    "electron-builder": "^19.54.0",
    "electron-installer-debian": "^0.8.0",
    "electron-log": "^2.2.11",
    "electron-packager": "^10.1.1",
    "electron-prebuilt": "^1.4.13",
    "electron-reload": "^1.2.2",
    "nodemon": "^1.12.1",
    "prettier": "1.8.2",
    "uglifyjs-webpack-plugin": "^1.1.6",
    "webpack": "^3.10.0"
  }
}
